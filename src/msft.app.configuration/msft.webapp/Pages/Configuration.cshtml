@page
@model ConfigurationModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Configuration";
}
<h1>@ViewData["Title"]</h1>

<p>This page contains some of the configurations from Azure App Configuration.</p>

<div class="configurations">
<h3>Configurations:</h3>

<table>
            <thead>
            <th>
            Name:
        </th>
        <th>
            Value:
        </th>
        </thead>
    <tr>
        <td style="width:50%">
                Message from config (page):
        </td>
        <td>
                @Model.configurationMessage
        </td>
        </tr>
        <tr>
            <td>
                ChargeCode:
            </td>
            <td>
                @Configuration["ChargeCode"]
            </td>
    </tr>
        <tr>
            <td>
                Sentinel:
            </td>
            <td>
                @Configuration["DemoApp:Sentinel"]
            </td>
        </tr>
        <tr>
            <td>
                Demo:Message
            </td>
            <td>
                @Configuration["Demo:Message"]
            </td>
        </tr>
</table>
</div>

<div class="secret">
<h3>Secret references:</h3>
    <table>
        <thead>
        <th>
            Name:
        </th>
        <th>
            Value:
        </th>
        </thead>
        <tr>
            <td style="width:50%">
                Secret reference - DemoApp:Secrets:Configuration:
            </td>
            <td>
                @Configuration["DemoApp:Secrets:Configuration"]
            </td>
        </tr>
        <tr>
            <td>
                Secret reference - DevOps:Secret:DevOpsSecret:
            </td>
            <td>
                @Configuration["DevOps:Secret:DevOpsSecret"]
            </td>
        </tr>
    </table>
</div>